CREATE TABLE quizzes(
quiz_id BIGINT NOT NULL AUTO_INCREMENT,
title VARCHAR(100),
description VARCHAR(3000),
thumbnail_image VARCHAR(1000),
private BOOLEAN NOT NULL DEFAULT FALSE,
author_id VARCHAR(100) NOT NULL,
password VARCHAR(100),
participation BIGINT DEFAULT 0,
create_datetime DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
updaet_datetime DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,

PRIMARY KEY(quiz_id)
);

CREATE TABLE questions(
question_id BIGINT NOT NULL AUTO_INCREMENT,
quiz_id BIGINT NOT NULL,
title VARCHAR(1000) NOT NULL,
hint VARCHAR(3000),
type TINYINT NOT NULL,
image VARCHAR(1000),
placeholder VARCHAR(1000),
carete_time DATETIME DEFAULT CURRENT_TIMESTAMP,
PRIMARY KEY(question_id)
);

CREATE TABLE questions(
question_item_id BIGINT NOT NULL AUTO_INCREMENT,
quiz_id BIGINT NOT NULL,
sequence INT NOT NULL,
text VARCHAR(300),
image VARCHAR(1000),
PRIMARY KEY(question_item_id)
);
